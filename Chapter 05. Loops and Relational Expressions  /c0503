#include < iostream >
  using namespace std;

int main() {
  int a;
  cout << "please enter an int:";
  cin >> a;
  int sum = 0;
  while (a != 0) {
    sum += a;
    cout << "now the sum of all int is:" << sum << endl;
    cout << "please enter an int:";
    cin >> a;
  }
  system("pause");
  return 0;
}
