//5.9.8
#include < iostream >
#include < string.h >
  using namespace std;

int main() {
  string ch; //char数组
  cout << "enter words(to stop,type the word done):" << endl;
  int count = 0;
  cin >> ch;
  while (ch != "done") //(ch[n] != 'done')
  {
    cout << ch; //不用考虑“字符叠加”的实现，是因为底下没有换行符，输出是在同一行的位置
    ++count;
    cin >> ch;
  }

  cout << "You enter a total of " << count << "words." << endl;
  system("pause");
  return 0;
}
