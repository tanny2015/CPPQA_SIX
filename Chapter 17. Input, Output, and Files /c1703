#include<iostream>
#include<fstream>
#include<cstdlib>
#include<cstring>
    using namespace std;
    int main(int argc, char *argv[])
    {
        
        ifstream fin(argv[1],ios::in);
        fstream out(argv[2],ios::out|ios::in);
        char ch;
        
        out.open(argv[2]);
        if(out.is_open())
            cout<<argv[2]<<" has been opened!"<<endl;
        else
            cerr<<argv[2]<<" could not be opened!"<<endl;
        out.clear()ï¼›
        out.seekp(-4,ios::end);
        
        fin.open(argv[1]);
        if(fin.is_open())
        {
            fin.clear();
            cout<<argv[1]<<" has been opened!"<<endl;
            fin.seekg(0,ios::beg);
            
            
            while(fin.peek()!=EOF)
            {
                
                fin.get(ch);
                out<<ch;
            }
 
            out.seekg(0,ios::beg);
            while(out.peek()!=EOF)
            {
                out.get(ch);
                cout<<ch;
            }
        }
        else
            cerr<<argv[1]<<" could not be opened!"<<endl;
        return 0;
    }
